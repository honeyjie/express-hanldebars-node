<div class="user main clear">
    {{> usercenter/user-nav}}
    <div class="user-main set">
        <div class="set-tab">
            <ul class="tab-title clear">
                <li class="active">个人信息</li>
                <li>账号密码</li>
            </ul>
            <div class="tab-box clear">
                <div class="set-avatar">
                    {{#unless locals.storage.headImg}}
                    <img src="{{data.headerimg}}" alt=""/>
                    {{else}}
                    <img src="{{locals.storage.headImg}}" alt=""/>
                    {{/unless}}
                    
                    <div class="changeimg">
                        <input type="file" class="inputstyle" name="file" />
                        <button class="set-avatar-change button-hollow">更换图像</button>
                    </div>
                </div>
                <div class="set-form set-form-info">
                    <div class="form-item clear">
                        <span class="form-item-name">用户名</span>
                        <input type="text" value="{{name}}" disabled="true"/>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">Email</span>
                        <input class="set-form-email" type="text" value="{{email}}"/>
                        <button class="set-form-send hidden">验证</button>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">手机号</span>
                        <input class="set-form-phone" type="text" value="{{}}"/>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">学校</span>
                        <input class="set-form-school" type="text" value="{{school}}"/>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">专业</span>
                        <input class="set-form-major" type="text" value="{{major}}"/>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">年级</span>
                        <div class="form-select set-form-grade">
                            <div class="form-select-value">选择年级</div>
                            <span>{{nainji}}</span>
                            <div class="form-select-arrow"></div>
                            <div class="form-select-option hidden" id="grade-option">
                                <ul>
                                    <li>大一</li>
                                    <li>大二</li>
                                    <li>大三</li>
                                    <li>大四</li>
                                    <li>硕士研究生</li>
                                    <li>博士研究生</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">意向留学地区</span>
                        <div class="form-select set-form-country">
                            <div class="form-select-value">选择地区</div>
                             <span>{{country}}</span>
                            <div class="form-select-arrow"></div>
                            <div class="form-select-option hidden" id="country-option">
                                <ul>
                                    <li>美国</li>
                                    <li>加拿大</li>
                                    <li>英国</li>
                                    <li>澳大利亚</li>
                                    <li>新西兰</li>
                                    <li>新加坡</li>
                                    <li>港澳台</li>
                                    <li>欧洲</li>
                                    <li>日本</li>
                                    <li>韩国</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <button class="set-save set-info-save button-solid-ban">保存</button>
                </div>
            </div>
            <div class="tab-box hidden">
                <div class="set-form set-tab-password">
                    <div class="form-item clear">
                        <span class="form-item-name">原密码</span>
                        <input class="set-form-oldpassword" type="password" value=""/>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">新密码</span>
                        <input class="set-form-password" type="password" value=""/>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">确认新密码</span>
                        <input class="set-form-repassword" type="password" value=""/>
                        <div class="form-item-notice hidden">
                            <div class="triangle"></div>
                            <p><span></span></p>
                        </div>
                    </div>
                    <div class="form-item clear">
                        <span class="form-item-name">绑定微信</span>
                        {{#unless app.locals.nickname}}
                        <div class="form-item-value">{{locals.storage.nickname}}</div>
                        {{else}}
                        <div class="form-item-value">{{app.locals.nickname}}</div>
                        {{/unless}}
                        
                    </div>
                    <button class="set-save set-password-save button-solid-ban">保存</button>
                </div>
            </div>
        </div>
    </div>
</div>